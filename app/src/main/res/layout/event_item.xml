<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="120dp"
        android:layout_height="163dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_image_shape" />

    <TextView
        android:id="@+id/eventName"
        style="@style/Theme.ScreeningTest.TextView.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toEndOf="@+id/imgEvent"
        app:layout_constraintTop_toTopOf="@+id/imgEvent"
        tools:text="Woodstock" />

    <TextView
        android:id="@+id/eventDate"
        style="@style/Theme.ScreeningTest.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryColor"
        app:layout_constraintStart_toStartOf="@+id/eventName"
        app:layout_constraintTop_toBottomOf="@+id/eventName"
        tools:text="15 Sept 2021" />

</androidx.constraintlayout.widget.ConstraintLayout>